<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content.top">
            <block class="Magento\Framework\View\Element\Template"
                   name="snippet.template"
                   template="Snippet_Layout::template.phtml">
                <arguments>
                    <argument name="snippet_message" xsi:type="string">Available on all pages!!!</argument>
                    <argument name="background_color" xsi:type="string">lightgreen</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
